<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>


    <style name="JTheme" parent="BaseTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="DrawerStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="TransparentStatusBar" parent="AppTheme" />

    <style name="Login_EditText_Style">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="met_baseColor">@android:color/white</item>
        <item name="met_clearButton">true</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelTextColor">@android:color/white</item>
        <item name="met_floatingLabelTextSize">@dimen/small_text_size</item>
        <item name="met_primaryColor">@android:color/white</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_textColorHint">@android:color/white</item>
    </style>
    <style name="New_TextLine">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="met_baseColor">@android:color/white</item>
        <item name="met_clearButton">true</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelTextColor">@android:color/white</item>
        <item name="met_floatingLabelTextSize">10sp</item>
        <item name="met_primaryColor">@android:color/white</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_textColorHint">@android:color/white</item>
    </style>
    <style name="my_TextLine">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="met_floatingLabelTextColor">@android:color/white</item>
        <item name="met_primaryColor">@android:color/white</item>
        <item name="met_floatingLabelTextSize">10sp</item>
        <item name="met_singleLineEllipsis">false</item>
        <item name="met_textColorHint">@android:color/white</item>
    </style>

    <style name="ColorsCircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColors">@array/progress_colors</item>
    </style>

    <style name="GridRowLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_row_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="GridRowItemStyle" parent="@style/Material.Drawable.Ripple.Wave.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="rd_enable">true</item>
    </style>

    <style name="GridRowItemSplitStyle">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolbarBaseTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:background">?colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="theme">@style/ToolBarWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>

    </style>

    <style name="ToolbarTheme" parent="ToolbarBaseTheme" />

    <style name="ToolBarWhite">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="ItemContentStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_half</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#f00</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="MaterialBtn" parent="Material.Drawable.Ripple.Wave.Light"/>

    <style name="LightSpinner" parent="Material.Widget.Spinner.Light">
        <item name="spn_labelEnable">true</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/colorPrimary</item>
        <item name="spn_arrowSize">8dp</item>
    </style>

    <style name="LightSpinnerItem" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <style name="md_radio_button" parent="Material.Drawable.RadioButton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="rbd_strokeColor">@drawable/radio_btn_selector</item>
        <item name="rbd_animDuration">200</item>
    </style>

    <style name="num_state_tips_view_style">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/md_red_600</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:text">@string/temp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

</resources>
